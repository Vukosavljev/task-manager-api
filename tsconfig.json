{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "paths": {
      "@constants": ["./constants"],
      "@controllers": ["./controllers"],
      "@models": ["./models"],
      "@routes": ["./routes"],
      "@types": ["./types"],
      "@utils": ["./utils"],
      "@validators": ["./validators"],
      "@middlewares": ["./middlewares"],
    },
  },
  "lib": ["es2015"],
}
